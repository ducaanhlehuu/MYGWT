<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:gwtbootstrap3="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	.paddingWidget {
		margin: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		
		<div style="width: 500px; padding: 10px">
			<h3>Add contact page</h3>
			<br></br>
			<input type = "hidden" ui:field="userId"></input>
			<gwtbootstrap3:Form>
				<gwtbootstrap3:FormGroup width="100%">
				    <gwtbootstrap3:Label styleName="col-form-label col-sm-2">Username</gwtbootstrap3:Label>
				    <gwtbootstrap3:TextBox ui:field="tbUsername" addStyleNames="form-control-plaintext col-sm-8 {style.paddingWidget}"></gwtbootstrap3:TextBox>
				</gwtbootstrap3:FormGroup>
				
				<gwtbootstrap3:FormGroup width="100%">
				    <gwtbootstrap3:Label styleName="col-sm-2 col-form-label">Name</gwtbootstrap3:Label>
				    <gwtbootstrap3:TextBox ui:field="tbName" addStyleNames="col-sm-8 {style.paddingWidget}"></gwtbootstrap3:TextBox>
				</gwtbootstrap3:FormGroup>
				
				<gwtbootstrap3:FormGroup width="100%">
				    <gwtbootstrap3:Label styleName="col-sm-2 col-form-label">Address</gwtbootstrap3:Label>
				    <gwtbootstrap3:TextBox ui:field="tbAddress" addStyleNames="{style.paddingWidget} col-sm-8"></gwtbootstrap3:TextBox>
				</gwtbootstrap3:FormGroup>
				
				<gwtbootstrap3:FormGroup width="100%">
				    <gwtbootstrap3:Label styleName="col-sm-2 col-form-label" >PhoneNumber</gwtbootstrap3:Label>
				    <gwtbootstrap3:TextBox ui:field="tbPhoneNumber" addStyleNames="{style.paddingWidget} col-sm-8"></gwtbootstrap3:TextBox>
				</gwtbootstrap3:FormGroup>
			</gwtbootstrap3:Form>

			<g:HorizontalPanel>
				<gwtbootstrap3:Button ui:field="btnBack" addStyleNames="{style.paddingWidget} btn btn-danger" ></gwtbootstrap3:Button>
				<gwtbootstrap3:Button ui:field="btnSave" addStyleNames="{style.paddingWidget} btn btn-success" ></gwtbootstrap3:Button>
			</g:HorizontalPanel>
			
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 